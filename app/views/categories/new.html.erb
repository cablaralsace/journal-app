<%=  form_with scope: :category, url: categories_path, method: :post, locale: true do |form| %>

  <div class="card">
    <div class="card-header">
      <h1> Add New Category </h1>
    </div>

    <div class="card-body">

      <div class="field form-group">
        <%= form.label :category_title %>
        <%= form.text_field :category_name, class: "form-control" %>
      </div><br/>

      <div class="field form-group">
        <%= form.label :description %>
        <%= form.text_field :category_body, class: "form-control" %>
      </div><br/>

      <div class="field form-group">
        <% form.label :user_id %>
        <%= form.number_field :user_id, id: :category_user_id, class: "form-control", value: current_user.id, type: :hidden %>
      </div>

      <div class="actions">
        <%= form.submit "Add New Category", class: "btn btn-dark" %>
      </div><br/>

    </div>
  </div>
    
  <br/>
  <%= render 'layouts/category_errors' %>
<% end %>
    