<%=  form_with scope: :category, url: categories_path, method: :post, locale: true do |form| %>

  <h1> New Category </h1>

  <%= form.label :category_name %>
  <%= form.text_field :category_name %>

  <%= form.label :category_body %>
  <%= form.text_field :category_body %>

  <%= form.submit %>


  <% if @category.errors.any? %>
    <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <%end%>
    </ul>
  <%end%>
  
<% end %>