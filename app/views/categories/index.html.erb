<h1> Category List </h1>

<table>
  <thead>
    <tr>
      <th> Category Name </th>
      <th> Category Body </th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td> <%= category.category_name%> </td>
        <td> <%= category.category_body%> </td>
        <td> <button> <%= link_to "View", category_path(category.id) %> </button> </td>
        <td> <button> <%= link_to "Edit", edit_category_path(category.id) %> </button> </td>
        <td> <button> <%= link_to "Delete", category_path(category.id), method: :delete, :data => {:confirm => 'Are you sure you want to delete this category?'} %> </button> </td>
      </tr>
    <% end %>

      <tr>
        <td> <button> <%= link_to "New Category", new_category_path %> </button> </td>
      </tr>
  </tbody>
</table>
