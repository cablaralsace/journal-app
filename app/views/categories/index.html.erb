<%# <h1> Categories </h1> %>

<table class="table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th> Category Name </th>
      <th> Category Body </th>
      <th> Date Created </th>
      <th> Date Updated </th>
      <th> User ID </th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <%# specific user, specific categories %>
      <% if category.user == current_user %> 
      <tr>
        <td> <%= category.category_name%> </td>
        <td> <%= category.category_body%> </td>
        <td> <%= category.created_at %></td>
        <td> <%= category.updated_at %></td>
        <td> <%= category.user_id %> </td>
        <td>
          <%= link_to "View Details", category_path(category.id), class: "btn btn-outline-dark btn-sm" %> 
          <%= link_to "Edit", edit_category_path(category.id), class: "btn btn-outline-dark btn-sm" %>
          <%= link_to "Delete", category_path(category.id), method: :delete, :data => {:confirm => 'Are you sure you want to delete this category?'}, class: "btn btn-outline-dark btn-sm" %> 
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "Add Category", new_category_path, class: "btn btn-outline-dark btn-sm" %>


