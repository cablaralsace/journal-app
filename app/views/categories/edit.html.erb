<%=  form_with scope: :category, url: edit_category_path, method: :put, locale: true do |form| %>

  <h1> Edit Category </h1>

  <%= form.label :category_name %>
  <%= form.text_field :category_name %>

  <%= form.label :category_body %>
  <%= form.text_field :category_body %>

  <%= form.submit %>

<% end %>